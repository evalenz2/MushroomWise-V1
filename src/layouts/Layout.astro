---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A community-focused platform dedicated to educating and connecting individuals interested in mushroom-based wellness." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container flex h-16 items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-amber-700">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z" />
          </svg>
          <span class="font-semibold text-xl">MushroomWise</span>
        </a>
        <nav class="hidden md:flex gap-6">
          <a href="/" class="text-sm font-medium hover:text-amber-700 transition-colors">
            Home
          </a>
          <a href="/learn" class="text-sm font-medium hover:text-amber-700 transition-colors">
            Learn
          </a>
          <a href="/stories" class="text-sm font-medium hover:text-amber-700 transition-colors">
            Stories
          </a>
          <a href="/community" class="text-sm font-medium hover:text-amber-700 transition-colors">
            Community
          </a>
          <a href="/about" class="text-sm font-medium hover:text-amber-700 transition-colors">
            About
          </a>
          <a href="/contact" class="text-sm font-medium hover:text-amber-700 transition-colors">
            Contact
          </a>
        </nav>
        <div class="flex items-center gap-4">
          <a href="/community" class="hidden md:flex inline-flex h-10 items-center justify-center rounded-md border border-amber-700 bg-background px-8 text-sm font-medium text-amber-700 shadow-sm transition-colors hover:bg-amber-50 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-amber-700">
            Join Waitlist
          </a>
          <a href="/learn" class="hidden md:flex inline-flex h-10 items-center justify-center rounded-md bg-amber-700 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-amber-800 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-amber-700">
            Start Learning
          </a>
          <button class="md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6">
              <line x1="4" x2="20" y1="12" y2="12" />
              <line x1="4" x2="20" y1="6" y2="6" />
              <line x1="4" x2="20" y1="18" y2="18" />
            </svg>
            <span class="sr-only">Toggle menu</span>
          </button>
        </div>
      </div>
    </header>
    <slot />
    <footer class="w-full border-t bg-amber-50 py-6 md:py-0">
      <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-amber-700">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z" />
          </svg>
          <p class="text-sm font-medium">Â© {new Date().getFullYear()} MushroomWise. All rights reserved.</p>
        </div>
        <div class="flex gap-4">
          <a href="/about" class="text-xs hover:underline underline-offset-4">
            About
          </a>
          <a href="/contact" class="text-xs hover:underline underline-offset-4">
            Contact
          </a>
          <a href="/privacy" class="text-xs hover:underline underline-offset-4">
            Privacy
          </a>
          <a href="/terms" class="text-xs hover:underline underline-offset-4">
            Terms
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
