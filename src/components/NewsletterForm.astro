<div class="mx-auto w-full max-w-md space-y-4">
  <form class="flex flex-col gap-3 sm:flex-row" id="newsletter-form">
    <input
      type="email"
      name="email"
      placeholder="Enter your email address"
      required
      class="flex h-12 w-full rounded-md border border-amber-200 bg-background px-4 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-amber-700 focus-visible:ring-offset-2"
    />
    <button 
      type="submit" 
      class="inline-flex h-12 items-center justify-center rounded-md bg-amber-700 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-amber-800 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-amber-700 whitespace-nowrap"
    >
      Get Free Guides
    </button>
  </form>
  <p class="text-xs text-center text-gray-500">
    Join 1,000+ subscribers. No spam, ever. Unsubscribe anytime.
  </p>
</div>

<script>
  document.getElementById('newsletter-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    // Add ConvertKit integration here
    const email = (e.target as HTMLFormElement).email.value;
    console.log('Newsletter signup:', email);
    // Redirect to thank you page or show success message
    alert('Thanks for subscribing! Check your email for your free guides.');
  });
</script>
